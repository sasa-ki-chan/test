block config 
  include config 
  - imgDir = "../assets/img/";

block pageConfig
  
doctype html
html(lang='ja')
  block head 
    head#site-head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(name="description", content=description)
    title= title
    
    block css
      link(rel="stylesheet", href="../assets/css/common.scss")
      link(rel="stylesheet", href=`../assets/css/${page}.scss`)
        
  block header 
    include header
  block main
  block footer 
    include footer